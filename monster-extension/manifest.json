{
    "manifest_version": 3,
    "name": "Monster Jobs Scraper",
    "version": "1.0.0",
    "description": "Scrape job listings from Monster.com and send to your API",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://www.monster.com/*",
        "*://monster.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Monster Jobs Scraper"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.monster.com/*",
                "*://monster.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}